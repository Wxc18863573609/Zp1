<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myactivity.OneMrakActivity">

<!--fff9ef-->
    <ScrollView
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="@dimen/dp_60"
         android:layout_marginTop="@dimen/dp_82"
        android:layout_height="@dimen/dp_60"
        android:src="@drawable/upxj"
        android:id="@+id/upxj"
        android:layout_centerHorizontal="true"
        />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="上传照片"
          android:textStyle="bold"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="@dimen/dp_7"
          android:layout_below="@id/upxj"
          android:id="@+id/b1"
          />
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:background="#E7C58F"
        android:layout_below="@id/b1"
        android:layout_height="@dimen/dp_45">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="基本信息"
            android:layout_marginLeft="@dimen/dp_10"
            android:textStyle="bold"
            />
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#c8c7cc"
            android:layout_below="@id/rl"
            android:id="@+id/v1"
            />

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_below="@id/v1"
            android:layout_height="@dimen/dp_45">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="姓名"
                android:id="@+id/xm"
                android:layout_marginLeft="@dimen/dp_10"
                />
                <EditText
                    android:id="@+id/ed_name"
                    android:layout_toRightOf="@id/xm"
                    android:layout_marginLeft="@dimen/dp_123"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@null"
                     android:hint="请输入姓名"
                    />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#c8c7cc"
            android:layout_below="@id/rl1"
            android:id="@+id/v2"
            />
        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_below="@id/v2"
            android:layout_height="@dimen/dp_45">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="生于"
                android:id="@+id/xm1"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shengxz"
                android:hint="请选择"
                android:layout_toRightOf="@+id/xm1"
                android:layout_marginLeft="@dimen/dp_125"
                android:layout_centerVertical="true"
                android:background="@null"
                />
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:background="@drawable/rightt"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#c8c7cc"
            android:layout_below="@id/rl2"
            android:id="@+id/v3"
            />

        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="match_parent"
            android:layout_below="@id/v3"
            android:layout_height="@dimen/dp_45">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="逝于"
                android:id="@+id/xm2"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请选择"
                android:id="@+id/shiy"
                android:layout_toRightOf="@+id/xm2"
                android:layout_marginLeft="@dimen/dp_125"
                android:layout_centerVertical="true"
                android:background="@null"
                />
