<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dp_10"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_5"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@drawable/mypopshapes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:id="@+id/aaaa"
                android:layout_height="wrap_content"
                android:text="选择支付"
                />
            <View
                android:layout_below="@id/aaaa"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B4B4A6"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginLeft="@dimen/dp_70"
                android:id="@+id/wxx"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wximgs"
                    android:src="@drawable/wxicn"
                    />
                <TextView
                    android:layout_below="@id/wximgs"
                    android:id="@+id/wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="微信支付"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="@dimen/dp_50"
                android:orientation="vertical"
                android:id="@+id/wxxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zfbicn"
                    android:id="@+id/wx1"
                    />
                <TextView
                    android:id="@+id/wxpyq"
                    android:layout_below="@id/wx1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="支付宝支付"/>
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/mypopshapes"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/qxx"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="取消"
            />
    </LinearLayout>

</LinearLayout>