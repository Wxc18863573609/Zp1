<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_27"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/retitle"
        android:background="@drawable/dlbg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180">

    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_marginTop="@dimen/dp_130"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_330"
        card_view:cardCornerRadius="8dp"
        android:paddingTop="@dimen/dp_5"
        card_view:contentPadding="8dp"
        android:layout_height="@dimen/dp_180">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/liner"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:id="@+id/duiimg"
                        android:src="@drawable/yzm"
                        />
                    <TextView
                        android:layout_toRightOf="@+id/duiimg"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="短信验证码"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        />


                </RelativeLayout>

                 <com.zupu.zp.weight.VerifyCodeView
                     android:layout_marginTop="@dimen/dp_10"
                     android:id="@+id/verify_code_view"
                     android:layout_marginLeft="@dimen/dp_25"
                     android:layout_width="@dimen/dp_260"
                     android:layout_height="@dimen/dp_40">

                 </com.zupu.zp.weight.VerifyCodeView>




            </LinearLayout>
            <Button
                android:layout_below="@id/liner"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dp_310"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_height="wrap_content"
                android:text="确定"
                android:id="@+id/start_loging"
                android:textSize="20sp"
                android:background="@drawable/myloginbtnshape"
                android:textColor="@color/white_color"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>