<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".myactivity.CreatLiveActivity">

   <RelativeLayout
       android:layout_marginTop="@dimen/dp_25"
       android:id="@+id/title"
       android:layout_width="match_parent"
       android:background="#8acd52"
       android:layout_height="@dimen/dp_40">
       <ImageView
           android:layout_centerVertical="true"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_width="@dimen/dp_15"
           android:layout_height="@dimen/dp_15"
           android:src="@drawable/jz_back_normal"
           android:id="@+id/backz"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直播封面"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
   </RelativeLayout>
    <ScrollView
        android:background="@drawable/myfmshape"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/mfimg"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:src="@mipmap/addpic"
            />
            <EditText
                android:id="@+id/ed_title"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/mfimg"
                android:background="@null"
                android:textColorHint="@color/white"
                android:layout_height="wrap_content"
                android:hint="请选择要参加的活动"
                android:textSize="14sp"
                />
            <View
                android:id="@+id/view1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_toRightOf="@id/mfimg"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_below="@id/ed_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#eddab9"
                >
            </View>
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/mfimg"
                android:layout_width="wrap_content"
                android:id="@+id/xztitle"
                android:layout_height="wrap_content"
                android:text="点击选择直播标题"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_below="@id/view1"
                />
               <LinearLayout
                   android:id="@+id/textlinner1"
                   android:layout_marginTop="@dimen/dp_5"
                   android:layout_width="wrap_content"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:layout_toRightOf="@id/mfimg"
                   android:layout_below="@id/xztitle"
                   android:background="@drawable/titleshape"
                   android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/texta"
                   android:layout_marginLeft="@dimen/dp_5"
                   android:layout_marginRight="@dimen/dp_5"
                   android:layout_marginTop="@dimen/dp_2"
                   android:layout_marginBottom="@dimen/dp_2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="我的直播你看了吗"
                   android:textSize="13sp"
                   android:textScaleX="1"
                   android:textColor="@color/white"
                   />
               </LinearLayout>
            <LinearLayout
                android:id="@+id/textlinner2"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/textlinner1"
                android:layout_below="@id/xztitle"
                android:background="@drawable/titleshape"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textb"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="相逢就是缘分"
                    android:textSize="13sp"
                    android:textScaleX="1"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/textlinner3"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/mfimg"
                android:layout_below="@id/textlinner1"
                android:background="@drawable/titleshape"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textc"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你今天过的怎么样"
                    android:textSize="13sp"
                    android:textScaleX="1"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/textlinner4"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/textlinner3"
                android:layout_below="@id/textlinner1"
                android:background="@drawable/titleshape"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textd"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我有闲,  你有空吗"
                    android:textSize="13sp"
                    android:textScaleX="1"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <View
                android:id="@+id/view2"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_below="@id/textlinner4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#eddab9"
                >
            </View>
            <RelativeLayout
                android:id="@+id/adc"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:layout_width="@dimen/dp_265"
                android:layout_height="@dimen/dp_33"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/ed_shaoppingname"
                android:hint="请输入商品/商家名称"
                 android:background="@drawable/edtextshaoppingshape"
                android:textSize="15sp"
                />
             <TextView
                 android:id="@+id/selectshaopping"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="@dimen/dp_10"
                 android:layout_width="wrap_content"
                 android:layout_centerVertical="true"
                 android:layout_height="wrap_content"
                 android:textColor="@color/white"
                 android:text="搜索"
                 android:textSize="18sp"
                 android:textStyle="bold"
                 />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adc"
                android:text="搜索结果"
                android:textSize="18sp"
                android:id="@+id/jieguo"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/dp_25"
                android:layout_below="@+id/jieguo"
                android:id="@+id/shaoppingrecycelview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120">
            </android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:id="@+id/que"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_below="@+id/jieguo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/headd"
                   android:layout_centerHorizontal="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/xiaotou"
                   />
                <TextView
                    android:layout_below="@id/headd"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无数据"
                    />

            </RelativeLayout>
            <LinearLayout
                android:onClick="onClick"
                android:id="@+id/moree"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/shaoppingrecycelview"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="展示更多"
                    />
                <ImageView
                    android:id="@+id/my_iv"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:src="@drawable/zk"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/biaoshi"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal"
                android:layout_below="@+id/moree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/adc"
                    android:text="直播分类"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />
                <RadioButton
                    android:layout_marginLeft="@dimen/dp_80"
                    android:id="@+id/noshare"
                    android:button="@null"
                    android:layout_marginTop="@dimen/dp_1"
                    android:layout_width="@dimen/dp_15"
                    android:background="@drawable/selectxz"
                    android:layout_height="@dimen/dp_15"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/adc"
                    android:text="娱乐"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:checked="true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />
                <RadioButton
                    android:layout_marginTop="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:id="@+id/yesshare"
                    android:button="@null"
                    android:background="@drawable/selectxz"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/adc"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="课程"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@+id/biaoshi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/biaoshi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择房间类型"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />
            <Spinner
                android:id="@+id/sp_type"
                android:layout_toRightOf="@id/biaoshi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:spinnerMode="dropdown"
                android:dropDownWidth="250dp"
                android:entries="@array/menu_type">
            </Spinner>
                <Button
                    android:id="@+id/creatbtn"
                    android:layout_below="@id/sp_type"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_40"
                    android:text="创建房间"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:background="@drawable/mycreatebtnshape"
                    />
            </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>