<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_margin="14dp"
        android:orientation="vertical"
        card_view:cardBackgroundColor="#070707"
        card_view:cardCornerRadius="25dp"
        card_view:cardElevation="5dp"
        card_view:contentPadding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="礼物"
            android:id="@+id/lw"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/white_color"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/lw"
            android:layout_width="match_parent"
            android:id="@+id/giftrecyview"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
            <Button
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_18"
                android:layout_below="@id/giftrecyview"
                android:id="@+id/chongzhi"
                android:text="充值"
                android:textSize="10sp"
                android:textColor="@color/white_color"
                android:background="@drawable/mystartbtnshape"
                />
  <ImageView
      android:layout_marginLeft="@dimen/dp_10"
      android:layout_toRightOf="@id/chongzhi"
      android:layout_marginTop="@dimen/dp_12"
      android:layout_width="@dimen/dp_13"
      android:layout_height="@dimen/dp_13"
      android:layout_below="@id/giftrecyview"
      android:id="@+id/dou"
      android:src="@drawable/qian"
      />
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/giftrecyview"
                android:text="0"
                android:layout_toRightOf="@+id/dou"
                android:id="@+id/numbers"
                android:textColor="@color/white_color"
                />

            <RelativeLayout
                android:layout_below="@id/giftrecyview"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_30"
                android:id="@+id/layout_gift"
                android:background="@drawable/mygifthape"
                >
                <TextView
                    android:id="@+id/giftnumber"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white_color"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_70"
                    android:layout_centerVertical="true"
                    android:id="@+id/numberxz"
                    android:src="@drawable/dwon"
                    />
            </RelativeLayout>
            <Button
                android:id="@+id/song"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_30"
                android:text="赠送"
                android:textColor="@color/white_color"
                android:background="@drawable/mystartbtnshape"
                android:layout_alignParentRight="true"
                 android:layout_below="@id/giftrecyview"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
