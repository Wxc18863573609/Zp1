<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".myactivity.EdjieActivity">
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_25"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_15"
            android:id="@+id/backss"
            android:src="@drawable/back0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="封面信息"
            android:id="@+id/titlename"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        <Button
            android:layout_width="@dimen/dp_40"
            android:background="@drawable/mybcshape"
            android:layout_height="@dimen/dp_22"
            android:text="保存"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/shure"
            android:textSize="13sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        <View
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/titlename"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:id="@+id/views1"
            android:background="#e1e1e1"
            />
    </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_40"
                android:background="@drawable/myedshape"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家谱名称"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <EditText
                    android:id="@+id/ed_1"
                    android:maxLength="4"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/dp_100"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:background="@null"
                    />

            </RelativeLayout>



        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/myedshape"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发起人"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <EditText
                android:id="@+id/ed_2"
                android:maxLength="4"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_100"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="match_parent"
                android:background="@null"
                />

        </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/myedshape"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑日期"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/ed_3"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="match_parent"
            android:text="请选择"
            android:gravity="center"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/myedshape"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑地址"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/ed_4"
            android:layout_alignParentRight="true"
            android:text="请选择"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="match_parent"
            android:gravity="center"
            />

    </RelativeLayout>

</LinearLayout>