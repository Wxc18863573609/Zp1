<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_27"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/retitle"
        android:background="@color/white_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        />
        <ImageView
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/backs"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@drawable/common_icon_back_black_n"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="#dedede"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找回密码"
        android:textColor="@color/garys"
        android:layout_below="@+id/retitle"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        android:id="@+id/titletext"
        android:textSize="25sp"
        />
    <LinearLayout
        android:id="@+id/liner"
        android:layout_below="@id/titletext"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/ed_phone"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_width="@dimen/dp_224"
                android:layout_height="wrap_content"
                android:maxLength="11"
                android:digits="1234567890"
                android:background="@null"
                android:hint="请输入手机号" />
            <View
                android:layout_width="match_parent"
                android:background="#C49E9E"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/ed_pwd"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_width="@dimen/dp_183"
                android:layout_height="wrap_content"
                android:background="@null"
                android:maxLength="4"
                android:hint="请输入手机动态密码" />


            <Button
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:text="获取验证码"
                android:textColor="@color/red"
                android:background="@drawable/shuoshape"
                android:id="@+id/wang"
                />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#C49E9E"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/ed_newpwd"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_width="@dimen/dp_224"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="请输入密码" />
            <View
                android:layout_width="match_parent"
                android:background="#C49E9E"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="1dp"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_below="@id/liner"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_310"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_height="wrap_content"
        android:text="确定"
        android:id="@+id/start_loging"
        android:textSize="20sp"
        android:background="@drawable/myloginbtnshape"
        android:textColor="@color/white_color"
        />


</RelativeLayout>