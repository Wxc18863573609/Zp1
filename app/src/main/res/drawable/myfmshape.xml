<shape xmlns:android="http://schemas.android.com/apk/res/android">
   <!-- <corners android:radius="@dimen/dp_5"/>
    <solid android:color="#E71919" />-->
    <!-- 填充的颜色 -->
    <solid android:color="#edd20f" />
    <!--设置渐变-->
    <gradient android:startColor="#5bcf86"
        android:endColor="#edd20f"
        android:angle="90"/>
    <!--#b0df87-->
    <!--angle控制渐变的方向-->
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="0dp" />
    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"
        />
</shape>